# CARI St-Laurent React Application - Environment Variables
# Copy this file to .env and update the values for your environment

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application Environment
# Options: development, staging, production
NODE_ENV=development

# Public URL (for Netlify deployment)
# This will be automatically set by Netlify
# For local development, use http://localhost:3000
PUBLIC_URL=http://localhost:3000

# Application Name
REACT_APP_NAME=CARI St-Laurent
REACT_APP_DESCRIPTION=Votre réussite au Québec commence ici

# ============================================
# API & SERVICES CONFIGURATION
# ============================================

# Contact Form API Endpoint
# Set to your backend API endpoint for form submissions
REACT_APP_API_URL=https://api.example.com

# Chatbot Service Configuration
REACT_APP_CHATBOT_ENABLED=true
REACT_APP_CHATBOT_API_KEY=your_chatbot_api_key_here

# Analytics Services
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX

# ============================================
# ORGANIZATION INFORMATION
# ============================================

# Contact Information
REACT_APP_ORGANIZATION_NAME=CARI St-Laurent
REACT_APP_ORGANIZATION_ADDRESS=774 boulevard Décarie, Bureau 300, Saint-Laurent H4L 3L5
REACT_APP_ORGANIZATION_PHONE=(514) 748-2007
REACT_APP_ORGANIZATION_EMAIL=carist@cari.qc.ca

# Business Hours
REACT_APP_BUSINESS_HOURS_WEEKDAYS=Lun-Ven 9h-12h, 12h30-16h30
REACT_APP_BUSINESS_HOURS_FRENCH=Francisation : 8h30-22h

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
REACT_APP_FEATURE_CHAT=true
REACT_APP_FEATURE_APPOINTMENT_FORM=true
REACT_APP_FEATURE_CONTACT_FORM=true
REACT_APP_FEATURE_MULTILANGUAGE=true
REACT_APP_FEATURE_ANALYTICS=false

# ============================================
# SECURITY & PERFORMANCE
# ============================================

# Security Headers (for Netlify)
REACT_APP_CSP_ENABLED=true
REACT_APP_HSTS_ENABLED=true

# Performance Optimization
REACT_APP_LAZY_LOAD_ENABLED=true
REACT_APP_IMAGE_OPTIMIZATION=true

# ============================================
# INTERNATIONALIZATION
# ============================================

# Default Language
REACT_APP_DEFAULT_LANGUAGE=fr

# Available Languages (comma-separated)
REACT_APP_SUPPORTED_LANGUAGES=fr,en,ar,es,ru

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Debug Mode
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

# Mock API for Development
REACT_APP_USE_MOCK_API=false
REACT_APP_MOCK_API_DELAY=500

# ============================================
# NETLIFY SPECIFIC
# ============================================

# Netlify Build Settings
NETLIFY_BUILD_NODE_VERSION=18
NETLIFY_BUILD_NPM_FLAGS=--legacy-peer-deps

# Netlify Functions (if using)
NETLIFY_FUNCTIONS_PATH=./netlify/functions

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Google Maps API Key
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Service (SendGrid, Mailgun, etc.)
REACT_APP_EMAIL_SERVICE=sendgrid
REACT_APP_EMAIL_API_KEY=your_email_api_key_here

# Social Media Links
REACT_APP_FACEBOOK_URL=https://facebook.com/caristlaurent
REACT_APP_TWITTER_URL=https://twitter.com/caristlaurent
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/cari-st-laurent
REACT_APP_INSTAGRAM_URL=https://instagram.com/caristlaurent

# ============================================
# NOTES
# ============================================

# 1. Never commit .env files to version control
# 2. Add .env to your .gitignore file
# 3. For production, set environment variables in Netlify dashboard
# 4. All REACT_APP_* variables will be embedded in the build
# 5. For security, keep API keys and secrets in Netlify environment variables

# ============================================
# QUICK START
# ============================================

# 1. Copy this file to .env
#    cp .env.example .env
#
# 2. Update the values for your environment
#
# 3. For Netlify deployment:
#    - Set environment variables in Netlify dashboard
#    - Or use netlify.toml for build settings
#
# 4. For local development, the .env file will be loaded automatically
